generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model JobApplication {
  id                 Int      @id @default(autoincrement())
  name               String
  gender             String
  email              String   @unique
  contactNumber      String
  address            String
  position           String
  city               String
  province           String
  region             String
  expectedSalary     String
  applicationLetter  String
  resumeUrl          String?
  createdAt          DateTime @default(now())
}
